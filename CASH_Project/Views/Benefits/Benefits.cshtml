@model IEnumerable <CASH.Models.VW_BENEFIT>

@{
    ViewBag.Title = "Benefits";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>$Benefits</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Dashboard_2", "Dashboards")">Home</a>
            </li>
           
            <li class="active">
                <strong>My benefits</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight ecommerce">


    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">

                    <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                        <thead>
                            <tr>

                                <th>No</th>
                                <th data-hide="phone">From</th>
                                <th data-hide="phone">Status</th>
                                <th data-hide="phone">Movement Type</th>
                                <th data-hide="phone">Amount</th>                                
                                <th data-hide="phone">Date Created</th>
                            

                            </tr>
                        </thead>
                        <tbody>
@foreach (var item in Model)
{

                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BENEFIT_ID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CYCLE_DESCRIPTION)
                                </td>
                                <td>
                                    @if (item.STATUS_ID == 2)
                                    {
                                        <span class="label label-warning">Waiting for approval</span>
                                    }
                                    else if (item.STATUS_ID == 1)
                                    {
                                        <span class="label label-primary">Completed</span>
                                    }


                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.MOVEMENT_TYPE_DESCRIPTION)
                                </td>
                                <td>

                                    @if (item.MOVEMENT_TYPE == 1)
                                    {
                                        @String.Concat("(US $", @item.AMMOUNT+")")
                                    }
                                    else if (item.MOVEMENT_TYPE == 2)
                                    {
                                        @String.Concat("US $", @item.AMMOUNT)
                                    }

                                  
                                </td>
                              
                                <td>
                                    @Html.DisplayFor(modelItem => item.CREATED_DATE)
                                </td>

                             
                            </tr>
         

}

                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="7">
                                    <ul class="pagination pull-right"></ul>
                                </td>
                            </tr>
                        </tfoot>
                    </table>

                </div>
            </div>
        </div>
    </div>


</div>

@section Styles {
    @Styles.Render("~/plugins/footableStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/footable")

    <script type="text/javascript">
        $(document).ready(function () {

            $('.footable').footable();

        });
    </script>
}

